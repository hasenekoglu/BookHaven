@model LibraryManagementSystem.Dto.CategoryDtos.UpdateCategoryDtos

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form asp-action="UpdateCategory" asp-controller="Category" asp-area="Admin" method="post">
                        <input type="hidden" asp-for="Id" />
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <br /> 
                        <label>Kategori Resmi</label>
                        <input type="text" class="form-control" asp-for="ImageURL" />
                        <br />
                        <button  class="btn btn-primary">Kategoriyi Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>